@model mini_account_app.Models.UserToRoleMappingDto_Create

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>User To Role Mapping</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserList"></select>
            </div>
            <div class="form-group">
                <label asp-for="Roles" class="control-label"></label>
                @for (int i = 0; i < Model.Roles?.Count; i++)
                {
                    <div>
                        <input type="checkbox" asp-for="@Model.Roles[i].IsSelected" />
                        <label>@Model.Roles[i].RoleName</label>
                        <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
